<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="com.kerner1000.drrename.MainController">
    <MenuBar fx:id="menuBar">
        <Menu text="File">
            <MenuItem text="Dummy File Creator" onAction="#handleMenuItemDummyFileCreator" accelerator="Shortcut+D"/>
            <!--            <MenuItem text="About" onAction="#handleMenuItemAbout" accelerator="Shortcut+A"/>-->
            <MenuItem text="Kodi Tools" onAction="#handleMenuItemKodiTools" accelerator="Shortcut+K"/>
        </Menu>
    </MenuBar>
    <BorderPane fx:id="layer01" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="4" right="4" bottom="4" left="4"/>
        </padding>
        <top>
            <fx:include fx:id="startDirectoryComponent" source="StartDirectoryComponent.fxml"/>
        </top>
        <center>
            <VBox fx:id="layer02_2">
                <padding>
                    <Insets top="4" right="4" bottom="4" left="4"/>
                </padding>
                <SplitPane VBox.vgrow="always">
                    <VBox spacing="4">
                        <padding>
                            <Insets top="4" right="4" bottom="4" left="4"/>
                        </padding>
                        <ListView fx:id="content1" maxWidth="Infinity"
                                  stylesheets="@/css/dense-list.css" maxHeight="Infinity"
                                  VBox.vgrow="ALWAYS"/>
                    </VBox>
                    <VBox spacing="4">
                        <padding>
                            <Insets top="4" right="4" bottom="4" left="4"/>
                        </padding>
                        <ListView fx:id="content2" maxWidth="Infinity"
                                  stylesheets="@/css/dense-list.css" maxHeight="Infinity"
                                  VBox.vgrow="ALWAYS"/>
                    </VBox>
                </SplitPane>
            </VBox>
        </center>
        <bottom>
            <VBox fx:id="layer02_3">
                <HBox fx:id="layer03_1">
                    <padding>
                        <Insets top="4" right="4" bottom="4" left="4"/>
                    </padding>
                    <TextField fx:id="textFieldReplacementStringFrom"
                               promptText="Search and replace this string, if applicable"
                               HBox.hgrow="ALWAYS">
                        <tooltip>
                            <Tooltip
                                    text="If applicable, search and replace this string."/>
                        </tooltip>
                    </TextField>
                    <TextField fx:id="textFieldReplacementStringTo"
                               promptText="Replace with this string, if applicable"
                               HBox.hgrow="ALWAYS">
                        <tooltip>
                            <Tooltip
                                    text="If applicable, replace with this string."/>
                        </tooltip>
                    </TextField>
                </HBox>
                <VBox fx:id="layer03_2">
                    <padding>
                        <Insets top="4" right="4" bottom="4" left="4"/>
                    </padding>
                    <ComboBox fx:id="comboBoxRenamingStrategy"
                              HBox.hgrow="ALWAYS" maxWidth="Infinity">
                        <tooltip>
                            <Tooltip text="Renaming strategy to use."/>
                        </tooltip>
                    </ComboBox>
                </VBox>
                    <BorderPane fx:id="layer04_1">
                        <padding>
                            <Insets top="4" right="4" bottom="4" left="4"/>
                        </padding>
                        <left>
                            <VBox HBox.hgrow="ALWAYS" fx:id="layer05_1">
                                <padding>
                                    <Insets top="4" right="4" bottom="4" left="4"/>
                                </padding>
                                <CheckBox fx:id="ignoreHiddenFiles" text="Ignore hidden files" selected="true"/>
                                <CheckBox fx:id="ignoreDirectories" text="Ignore directories" selected="false"/>

                            </VBox>
                        </left>
                        <right>
                            <BorderPane fx:id="layer04_2">
                                <padding>
                                    <Insets top="4" right="4" bottom="4" left="4"/>
                                </padding>
                                <center>
                                    <fx:include fx:id="goCancelButtonsComponent"
                                                source="GoCancelButtonsComponent.fxml"/>
                                </center>
                                <bottom>
                                    <BorderPane fx:id="layer04_3">
                                    <padding>
                                        <Insets top="4" right="4" bottom="4" left="4"/>
                                    </padding>
                                    <center>
                                        <ProgressBar fx:id="progressBar"
                                        />
                                    </center>
                                    </BorderPane>
                                </bottom>
                            </BorderPane>
                        </right>
                    </BorderPane>
            </VBox>
        </bottom>
    </BorderPane>
</VBox>
