<?import drkodi.ui.ProgressAndStatusGridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ListView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="drkodi.ui.MainViewController" fx:id="root">

    <padding>
        <Insets top="4" right="4" bottom="4" left="4"/>
    </padding>

    <MenuBar fx:id="menuBar">
        <Menu text="File">
            <MenuItem text="Settings" onAction="#handleMenuItemSettings" accelerator="Shortcut+S"/>
        </Menu>
    </MenuBar>

    <fx:include fx:id="startDirectory" source="StartDirectoryComponent.fxml"/>

       <SplitPane VBox.vgrow="ALWAYS">
           <ListView fx:id="listView" VBox.vgrow="ALWAYS"/>
           <VBox fx:id="detailsBox"></VBox>
       </SplitPane>

    <ProgressAndStatusGridPane fx:id="progressAndStatusGrid"/>

</VBox>
